{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"noImplicitAny": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
